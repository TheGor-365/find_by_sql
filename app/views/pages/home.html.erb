<h1 class="display-1 text-success mb-5">
  General Data
</h1>

<table class="table  table-bordered shadow">
  <thead>
    <tr>
      <th>Record Type</th>
      <th>Content</th>
      <th>Created At</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.record_type %></td>
        <td><%= record.content %></td>
        <td><%= record.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
